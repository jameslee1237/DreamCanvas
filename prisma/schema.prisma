generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id String @id @default(uuid()) @map("_id")
  tags String?
  feed String
  image String
  authorId String 
  author User @relation(fields: [authorId], references: [id])
  comments Comment[]
  
  likes Int @default(0)
  likedByIds String[]
  likedBy User[] @relation("UserLikes", fields: [likedByIds], references: [id])
  
  saved Int @default(0)
  savedByIds String[]
  savedBy User[] @relation("UserSaves", fields: [savedByIds], references: [id])
}

model User {
  id String @id @default(uuid()) @map("_id")
  clerkId String @unique
  firstName String
  lastName String
  userName String
  email String 
  posts Post[]
  profileImage String?

  followedByIds String[]
  followedBy    User[]   @relation("UserFollows", fields: [followedByIds], references: [id])

  followingIds String[] 
  following    User[]   @relation("UserFollows", fields: [followingIds], references: [id])

  LikedPostsIds String[]
  LikedPosts    Post[]   @relation("UserLikes", fields: [LikedPostsIds], references: [id])

  SavedPostsIds String[]
  SavedPosts    Post[]   @relation("UserSaves", fields: [SavedPostsIds], references: [id])

  comments Comment[]
  commentsIds String[]
}

model Comment {
  id String @id @default(uuid()) @map("_id")
  comment String
  authorId String
  author User @relation(fields: [authorId], references: [id])
  postId String
  post Post @relation(fields: [postId], references: [id])
}
